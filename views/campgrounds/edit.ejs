<%- include("../layouts/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[url]" placeholder="Image url" value="<%= campground.url %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a class="btn btn-lg btn-link btn-block" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../layouts/footer") %>